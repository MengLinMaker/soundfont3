{
  "name": "soundfont3",
  "version": "0.0.1",
  "description": "A SoundFont3 parser for Node.js and web browsers",
  "main": "lib/SoundFont3.node.js",
  "module": "lib/SoundFont3.js",
  "typings": "typings/index.d.ts",
  "keywords": [
    "soundfont3",
    "soundfont",
    "sf3",
    "midi",
    "synthesizer"
  ],
  "author": "Meng Lin <menglinmaker@gmail.com>",
  "repository": "https://github.com/musidi-org/soundfont3.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "test": "jest --coverage",
    "prettier": "prettier --write --config ./.prettierrc --list-different '**/*.ts'",
    "build": "tsc --project tsconfig.json --declaration --declarationDir typings --emitDeclarationOnly && webpack",
    "prepublishOnly": "rm -rf ./lib ./typings && cross-env NODE_ENV=development yarn run build",
    "docs:deploy": "vitepress build docs && gh-pages -d docs/.vitepress/dist",
    "docs:dev": "vitepress dev docs"
  },
  "files": [
    "lib",
    "src",
    "typings"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.5.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.17.60",
    "@types/webpack": "^4.41.38",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.1",
    "babel-loader": "^8.3.0",
    "cross-env": "^5.2.1",
    "eslint": "^9.5.0",
    "gh-pages": "^2.2.0",
    "husky": "^1.3.1",
    "jest": "^29.7.0",
    "lint-staged": "^8.2.1",
    "node-web-audio-api": "^0.21.1",
    "prettier": "^3.3.2",
    "riff-file": "^1.0.3",
    "smplr": "^0.15.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1",
    "vitepress": "^1.2.3",
    "webpack": "^4.47.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --config ./.prettierrc --list-different '**/*.ts'",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "pnpm run lint && pnpm run test && lint-staged"
    }
  }
}